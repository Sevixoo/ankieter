<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{% block title %}MT{% endblock %}</title>

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/materialize/css/materialize.min.css') }}"  media="screen,projection"/>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

    <script type="text/javascript" src="{{ asset('bundles/materialize/js/materialize.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/underscore/underscore.min.js') }}"></script>

    {% block include_scripts %}{% endblock %}

    <script src="{{ asset('bundles/jQueryFileUpload/js/vendor/jquery.ui.widget.js') }}"></script>
    <script src="{{ asset('bundles/jQueryFileUpload/js/jquery.iframe-transport.js') }}"></script>
    <script src="{{ asset('bundles/jQueryFileUpload/js/jquery.fileupload.js') }}"></script>

</head>
<body style="height: 100%;min-height: 100%" >

<nav style="" class="blue darken-3" >
    <div class="nav-wrapper">
        <a href="#" class="brand-logo center">MT</a>
    </div>
</nav>

<!-- Page Layout here -->
<div class="row" style="padding-bottom: 100px;" >
    <div class="progress" style="margin: 0px;height: 5px;display: none;" >
        <div class="indeterminate"> </div>
    </div>
    {% block content %}{% endblock %}
    <div style="clear:both;" ></div>
</div>

{% block javascripts %}{% endblock %}

<script type="text/javascript" >

    var BaseApp = {
        showLoader : function(){
            $( "#progressLoader" ).show();
        },
        hideLoader : function(){
            $( "#progressLoader" ).hide( "slow" );
        },
        parametrizeUrl : function( data , url ){
            var str = url;
            for( x in data ){
                str = str.replace( "{"+x+"}" , data[x] );
            }
            if( str.search(/{*}/i) >= 0 ){
                throw "Invalid arg in "+str;
            }
            return str;
        }
    };

</script>

</body>
</html>
